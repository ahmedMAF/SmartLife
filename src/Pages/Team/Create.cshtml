@page
@model SmartLife.Pages.Team.CreateModel

@{
    ViewData["Title"] = "Create Team Member";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>@Model.Localizer["dashboard"]</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="Index">@Model.Localizer["dashboardhome"]</a></li>
                <li><a asp-page="Dashboard/Index">@Model.Localizer["dashboard"]</a></li>
                <li class="current">@Model.Localizer["createmember"]</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["createmember"]</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200" enctype="multipart/form-data" asp-antiforgery="false">
                    <div class="row gy-4">
                        <div class="col-md-12">
                            <input asp-for="TeamMember.Name" style="border-radius: 5px;" class="form-control"
                                placeholder="@Model.Localizer["name"]" required="">
                            <span asp-validation-for="TeamMember.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <input asp-for="TeamMember.NameAr" style="border-radius: 5px;" class="form-control"
                                placeholder="@Model.Localizer["namea"]" required="">
                            <span asp-validation-for="TeamMember.NameAr" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <input asp-for="TeamMember.Role" class="form-control" style="border-radius: 5px;"
                                placeholder="@Model.Localizer["role"]" required="">
                            <span asp-validation-for="TeamMember.Role" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <input asp-for="TeamMember.RoleAr" class="form-control" style="border-radius: 5px;"
                                placeholder="@Model.Localizer["rolea"]" required="">
                            <span asp-validation-for="TeamMember.RoleAr" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <div>
                                <label asp-for="TeamMember.Photo" class="w-100 mb-2 ps-2 text-start textar">
                                    @Model.Localizer["image"]
                                     </label>
                                <input asp-for="Image" style="border-radius: 5px;" type="file"
                                    class="form-control" placeholder="Image" required="">
                            </div>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>

                            <button type="submit">@Model.Localizer["create"]</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- /Admin Section -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
