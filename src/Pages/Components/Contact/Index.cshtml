@model SmartLife.Models.Contact

<div class="footer-contact pt-3">
    <p>@SmartLife.Utilities.LocationHelper.GetCountryNameBy2LetterISO(Model.Country)</p>
    @foreach (var address in @Model.Addresses)
    {
        <p>@address</p>
    }
    @foreach (var phone in @Model.Phones)
    {
        <p class="mt-3"><strong>Phone:</strong> <span>@phone</span></p>
    }
    @foreach (var whatsApp in @Model.WhatsApps)
    {
        <p class="mt-3"><strong>WhatsApp:</strong> <span>@whatsApp</span></p>
    }
    @foreach (var email in @Model.WhatsApps)
    {
        <p><strong>Email:</strong> <span>info@example.com</span></p>
    }
</div>