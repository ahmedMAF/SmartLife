@page "{id}"
@model SmartLife.Pages.Contacts.EditModel

@{
    ViewData["Title"] = "Edit Contact";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>Dashboard</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/Admin/Index">Dashboard</a></li>
                <li class="current">Edit Contact</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Edit Contact</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200" asp-antiforgery="false">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row gy-4">
                        <div>
                            <label class="w-100 mb-2 ps-2 text-start">Country</label>
                            <select asp-for="Contact.Country" style="border-radius: 5px;" class="form-select select" required="">
                                <option value="" disabled selected>Select a Country</option>
                                @foreach(var country in Model.Countries)
                                {
                                    <option value="@country.Code">@country.Name</option>
                                }
                            </select>
                        </div>
                        <div>
                            <label class="w-100 mb-2 ps-2 text-start">Addresses</label>
                            @for(int i = 0; i < Model.Contact.Addresses.Count; i++)
                            {
                                <input asp-for="Contact.Addresses[@i]" style="border-radius: 5px;" class="form-control">
                                <span asp-validation-for="Contact.Addresses[@i]" class="text-danger"></span>

                                <input asp-for="Contact.AddressesAr[@i]" style="border-radius: 5px;" class="form-control">
                                <span asp-validation-for="Contact.AddressesAr[@i]" class="text-danger"></span>
                            }
                        </div>
                        <div>
                            <label class="w-100 mb-2 ps-2 text-start">Emails</label>
                            @for(int i = 0; i < Model.Contact.Emails.Count; i++)
                            {
                                <input asp-for="Contact.Emails[@i]" style="border-radius: 5px;" type="email" class="form-control">
                                <span asp-validation-for="Contact.Emails[@i]" class="text-danger"></span>
                            }
                        </div>
                        <div>
                            <label class="w-100 mb-2 ps-2 text-start">Phones</label>
                            @for(int i = 0; i < Model.Contact.Phones.Count; i++)
                            {
                                <input asp-for="Contact.Phones[@i]" style="border-radius: 5px;" class="form-control">
                                <span asp-validation-for="Contact.Phones[@i]" class="text-danger"></span>
                            }
                        </div>
                        <div>
                            <label class="w-100 mb-2 ps-2 text-start">WhatsApps</label>
                            @for(int i = 0; i < Model.Contact.WhatsApps.Count; i++)
                            {
                                <input asp-for="Contact.WhatsApps[@i]" style="border-radius: 5px;" class="form-control">
                                <span asp-validation-for="Contact.WhatsApps[@i]" class="text-danger"></span>
                            }
                        </div>
                        <div id="addresses" class="text-start">
                            <span>Add an address</span>
                            <i id="iconAddress" style="color: #7cc576; cursor: pointer; margin-left: 25px;" class="bi bi-plus-circle fs-5"></i>
                        </div>
                        <div id="emails" class="text-start">
                            <span>Add an email</span>
                            <i id="iconEmail" style="color: #7cc576; cursor: pointer; margin-left: 42px;" class="bi bi-plus-circle fs-5"></i>
                        </div>
                        <div id="phones" class="text-start">
                            <span>Add an phone</span>
                            <i id="iconPhone" style="color: #7cc576; cursor: pointer; margin-left: 36px;" class="bi bi-plus-circle fs-5"></i>
                        </div>
                        <div id="whatsup" class="text-start">
                            <span>Add an whatsApp</span>
                            <i id="iconWhasapp" style="color: #7cc576; cursor: pointer;" class="bi bi-plus-circle fs-5 ms-2"></i>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
            
                            <button formaction="" type="submit">Save</button>
                            <button formaction="/Contacts/Delete/@Model.Contact.Country" type="submit" class="btn-danger">Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- /Admin Section -->

@section Scripts {
    <script>
        let a = @Model.Contact.Addresses.Count;
        let e = @Model.Contact.Emails.Count;
        let p = @Model.Contact.Phones.Count;
        let w = @Model.Contact.WhatsApps.Count;
    </script>
    <script src="~/js/contact.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
