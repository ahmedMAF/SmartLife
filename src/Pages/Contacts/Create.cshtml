@page
@model SmartLife.Pages.Contacts.CreateModel

@{
    ViewData["Title"] = "Add Contact";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>Dashboard</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/Admin/Index">Dashboard</a></li>
                <li class="current">Add Contact</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Add Contact</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">
                        <div class="col-md-12">
                            <input asp-for="Contact.Country" style="border-radius: 5px;" class="form-control" placeholder="Country">
                            <span asp-validation-for="Contact.Country" class="text-danger"></span>
                        </div>
                        <div id="addresses" class="text-start">
                            <span>Add an address</span>
                            <i id="iconAddress" style="color: #7cc576; cursor: pointer; margin-left: 25px;"
                                class="bi bi-plus-circle fs-5"></i>
                        </div>
                        <div id="emails" class="text-start">
                            <span>Add an email</span>
                            <i id="iconEmail" style="color: #7cc576; cursor: pointer; margin-left: 42px;"
                                class="bi bi-plus-circle fs-5"></i>
                        </div>
                        <div id="phones" class="text-start">
                            <span>Add an phone</span>
                            <i id="iconPhone" style="color: #7cc576; cursor: pointer; margin-left: 36px;"
                                class="bi bi-plus-circle fs-5"></i>
                        </div>
                        <div id="whatsup" class="text-start">
                            <span>Add an whatsApp</span>
                            <i id="iconWhasapp" style="color: #7cc576; cursor: pointer;"
                                class="bi bi-plus-circle fs-5 ms-2"></i>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>

                            <button type="submit">Add</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- /Admin Section -->

@section Scripts {
    <script src="~/js/contacts.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
