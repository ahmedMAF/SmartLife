@page
@model SmartLife.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>@Model.Localizer["ourproducts"]</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">@Model.Localizer["ourproductsHome"]</a></li>
                <li class="current">@Model.Localizer["products"]</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Product Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["products"]</h2>
        <p>@Model.Localizer["productsp1"]</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item">
                        <a asp-page="/Products/Details" asp-route-id="@product.Id">
                            <img src="@product.Image" class="product-image" alt="@product.Name">
                            <div class="portfolio-info showar">
                                <h4>@if (Model.IsAr) { @product.NameAr } else { @product.Name }</h4>
                                <p>
                                    @if (Model.IsAr)
                                    {
                                        @if (product.DescriptionAr.Length < 50)
                                            @product.DescriptionAr
                                        else 
                                            @(product.DescriptionAr[..50] + "...")
                                    }
                                    else
                                    {
                                        @if (product.Description.Length < 50)
                                            @product.Description
                                        else
                                            @(product.Description[..50] + "...")
                                    }
                                </p>
                                <a href="@product.Image" title="@if (Model.IsAr) { @product.NameAr } else { @product.Name }" data-gallery="portfolio-gallery-app"
                                    class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                <a asp-page="/Products/Details" asp-route-id="@product.Id" title="More Details" class="details-link"><i
                                        class="bi bi-link-45deg"></i></a>
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <a asp-page="/Products/Edit" asp-route-id="@product.Id" class="me-3">@Model.Localizer["edit"]</a>
                                    <form method="post" action="/Products/Delete/@product.Id" style="display: inline;" asp-antiforgery="false">
                                        <button class="a text-danger" type="submit">@Model.Localizer["delete"]</button>
                                    </form>
                                }
                            </div>
                        </a>
                    </div>
                    <!-- End Portfolio Item -->
                }
            </div><!-- End Portfolio Container -->
        </div>
    </div>
</section><!-- End Product Section -->
@section Scripts {
    <script>
        const videos = swiper.el.querySelectorAll('video');
        videos.forEach(video => {
            video.addEventListener('play', () => {
                swiper.autoplay.stop();
            });

            video.addEventListener('pause', () => {
                swiper.autoplay.start();
            });

            video.addEventListener('ended', () => {
                swiper.autoplay.start();
            });
        });
    </script>
}