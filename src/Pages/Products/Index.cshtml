@page
@model SmartLife.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>Our Products</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">Home</a></li>
                <li class="current">Products</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Product Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Products</h2>
        <p>Full Solutions for Smart Automation and Security</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item">
                        <a asp-page="Details" asp-route-id="@product.Id">
                            <img src="@product.Image" class="product-image" alt="@product.Name">
                            <div class="portfolio-info">
                                <h4>@product.Name</h4>
                                <p>@product.Description</p>
                                <a href="@product.Image" title="@product.Name" data-gallery="portfolio-gallery-app"
                                    class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                <a asp-page="Details" asp-route-id="@product.Id" title="More Details" class="details-link"><i
                                        class="bi bi-link-45deg"></i></a>
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <a asp-page="/Products/Edit" asp-route-id="@product.Id" class="me-3">Edit</a>
                                    <form method="post" action="/Products/Delete/@product.Id" style="display: inline;">
                                        <button class="a text-danger" type="submit">Delete</button>
                                    </form>
                                }
                            </div>
                        </a>
                    </div>
                
                    <!-- End Portfolio Item -->
                }
            </div><!-- End Portfolio Container -->
        </div>
    </div>
</section><!-- End Product Section -->
