@page
@model SmartLife.Pages.About.EditModel

@{
    ViewData["Title"] = "Edit About";
}

<!-- Page Title -->
<div class="page-title dark-background">
  <div class="container">
    <h1>Admin</h1>
    <nav class="breadcrumbs">
      <ol>
        <li><a asp-page="/Index">Home</a></li>
        <li><a asp-page="/Admin/Index">Admin</a></li>
        <li class="current">Edit About</li>
      </ol>
    </nav>
  </div>
</div>
<!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2>Edit About</h2>
  </div>
  <!-- End Section Title -->
  <div class="container contact section-title" data-aos="fade-up">
    <div class="row justify-content-center mb-5">
      <div class="col-lg-7">
        <form method="post" class="form" data-aos="fade-up" data-aos-delay="200">
          <div class="row gy-4">
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Countries</label>
              <input name="countries" type="text" style="border-radius: 5px" class="form-control" value="@Model.AboutData.Countries" />
            </div>
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Projects</label>
              <input name="projects" style="border-radius: 5px" class="form-control" value="@Model.AboutData.Projects" />
            </div>
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Consultants</label>
              <input name="consultants" value="@Model.AboutData.Consultants" style="border-radius: 5px" class="form-control"/>
            </div>
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Employees</label>
              <input name="employees" value="@Model.AboutData.Employees" style="border-radius: 5px" class="form-control"/>
            </div>
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Clients</label>
              <input name="clients" value="@Model.AboutData.Clients" style="border-radius: 5px" class="form-control"/>
            </div>
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Branches</label>
              <input name="branches" value="@Model.AboutData.Branches" style="border-radius: 5px" class="form-control"/>
            </div>
            <div class="col-md-12 text-center">
              <div class="loading">Loading</div>
              <div class="error-message"></div>

              <button type="submit">Save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="container section-title" data-aos="fade-up">
    <h2>Add Growth</h2>
  </div>
  <!-- End Section Title -->
  <div class="container contact section-title" data-aos="fade-up">
    <div class="row justify-content-center mb-5">
      <div class="col-lg-7">
        <form asp-page-handler="Add" method="post" class="form" data-aos="fade-up" data-aos-delay="200">
          <div class="row gy-4">
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Year</label>
              <input name="year" style="border-radius: 5px" class="form-control" />
            </div>
            <div>
              <label class="w-100 mb-2 ps-2 text-start">Value</label>
              <input name="val" style="border-radius: 5px" class="form-control"/>
            </div>
            <div class="col-md-12 text-center">
              <div class="loading">Loading</div>
              <div class="error-message"></div>

              <button type="submit">Add</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="container section-title" data-aos="fade-up">
    <h2>Edit Growth</h2>
  </div>
  <!-- End Section Title -->
  <div class="container contact section-title" data-aos="fade-up">
    <div class="row justify-content-center mb-5">
      <div class="col-lg-7">
        <form asp-page-handler="Edit" method="post" class="form" data-aos="fade-up" data-aos-delay="200">
          <div class="row gy-4">
            @for(int i = 0; i < Model.Growth.Count; i++)
            {
                <div>
                    <label class="w-100 mb-2 ps-2 text-start">Year</label>
                    <input asp-for="Growth[@i].Year" value="@Model.Growth[i].Year" style="border-radius: 5px" class="form-control"/>
                </div>
                <div>
                    <label class="w-100 mb-2 ps-2 text-start">Value</label>
                    <input asp-for="Growth[@i].Value" value="@Model.Growth[i].Value" style="border-radius: 5px" class="form-control mb-5"/>
                </div>
            }
            
            <div class="col-md-12 text-center">
              <div class="loading">Loading</div>
              <div class="error-message"></div>

              <button type="submit">Save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- /Admin Section -->
