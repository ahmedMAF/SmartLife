@page "{id:int}"
@model SmartLife.Pages.Clients.EditModel

@{
    ViewData["Title"] = "Edit Client";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>@Model.Localizer["editclientsadmin"]</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">@Model.Localizer["editclientsahome"]</a></li>
                <li><a asp-page="/Admin/Index">@Model.Localizer["editclientsadmin"]</a></li>
                <li class="current">@Model.Localizer["editclient"]</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["editclient"]</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <form enctype="multipart/form-data" method="post" class="form" data-aos="fade-up" data-aos-delay="200"
                    asp-antiforgery="false">
                    <input type="hidden" name="id" value="@Model.Client.Id" />
                    <div class="row gy-4">
                        <div class="col-md-12">
                            <input asp-for="Client.Name" style="border-radius: 5px;" class="form-control"
                                placeholder="Name (English)">
                            <span asp-validation-for="Client.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <input asp-for="Client.NameAr" style="border-radius: 5px;" class="form-control"
                                placeholder="Name (Arabic)">
                            <span asp-validation-for="Client.NameAr" class="text-danger"></span>
                        </div>>
                        <div class="col-md-12">
                            <textarea asp-for="Client.Description" class="form-control" style="border-radius: 5px;"
                                placeholder="Description (English)"></textarea>
                            <span asp-validation-for="Client.Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <textarea asp-for="Client.DescriptionAr" class="form-control" style="border-radius: 5px;"
                                placeholder="Description (Arabic)"></textarea>
                            <span asp-validation-for="Client.DescriptionAr" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <div>
                                <label class="w-100 mb-2 ps-2 text-start textar"
                                    for="image">@Model.Localizer["uploadimage"]</label>
                                <input asp-for="Image" style="border-radius: 5px;" class="form-control"
                                    placeholder="Image">
                            </div>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>

                            <button type="submit">@Model.Localizer["save"]</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- /Admin Section -->


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
