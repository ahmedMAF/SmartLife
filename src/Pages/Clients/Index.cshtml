@page
@model SmartLife.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Clients";
}

 <!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
    <h1>Clients</h1>
    <nav class="breadcrumbs">
        <ol>
        <li><a asp-page="Index">Home</a></li>
        <li class="current">Clients</li>
        </ol>
    </nav>
    </div>
</div><!-- End Page Title -->

<!-- Clients Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Clients</h2>
        <p>Clients We Are Proud to Serve.</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var client in Model.Clients)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                        <img src="@client.Image" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>@client.Name</h4>
                            <p>@client.Description</p>
                            <a href="@client.Image" title="@client.Name" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                        </div>
                    </div><!-- End client Item -->
                }
            </div><!-- End clients Container -->
        </div>
    </div>
</section>
<!-- /Clients Section -->