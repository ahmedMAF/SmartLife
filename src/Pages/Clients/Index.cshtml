@page
@model SmartLife.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Clients";
}

 <!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
    <h1>@Model.Localizer["clients"]</h1>
    <nav class="breadcrumbs">
        <ol>
        <li><a asp-page="/Index">@Model.Localizer["clientsHome"]</a></li>
        <li class="current">@Model.Localizer["clients"]</li>
        </ol>
    </nav>
    </div>
</div><!-- End Page Title -->

<!-- Clients Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["ourclients"]</h2>
        <p>@Model.Localizer["ourclientsp1"]</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var client in Model.Clients)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                        <img src="@client.Image" class="product-image" alt="">
                        <div class="portfolio-info">
                            <h4>@if (Model.IsAr) { @client.NameAr } else { @client.Name }</h4>
                            @{
                                string desc = Model.IsAr ? client.DescriptionAr : client.Description;
                            }
                            @if (desc != null)
                            {
                                <p>
                                    @if (desc.Length <= 60)
                                        @desc
                                    else
                                        @(desc[..50] + "...")
                                </p>
                            }
                            <a href="@client.Image" title="@if (Model.IsAr) { @client.DescriptionAr } else { @client.Description }" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <a asp-page="/Clients/Edit" asp-route-id="@client.Id" class="me-3">Edit</a>
                                <form method="post" action="/Clients/Delete/@client.Id" style="display: inline;" asp-antiforgery="false">
                                    <button class="a text-danger" class="text-danger" type="submit">Delete</button>
                                </form>
                            }
                        </div>
                    </div><!-- End client Item -->
                }
            </div><!-- End clients Container -->
        </div>
    </div>
</section>
<!-- /Clients Section -->