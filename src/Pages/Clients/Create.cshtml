@page
@model SmartLife.Pages.Clients.CreateModel

@{
    ViewData["Title"] = "Add Client";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>@Model.Localizer["clientsadmin"]</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">@Model.Localizer["clientsadminhome"]</a></li>
                <li><a asp-page="/Admin/Index">@Model.Localizer["clientsadmin"]</a></li>
                <li class="current">@Model.Localizer["addclient"]</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["addclient"]</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200" enctype="multipart/form-data" asp-antiforgery="false">
                    <div class="row gy-4">
                        <div class="col-md-12">
                            <input asp-for="Client.Name" style="border-radius: 5px;" class="form-control" placeholder="Name">
                            <span asp-validation-for="Client.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <textarea asp-for="Client.Description" class="form-control" style="border-radius: 5px;" placeholder="Description"></textarea>
                            <span asp-validation-for="Client.Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <div>
                                <label class="w-100 mb-2 ps-2 text-start" for="image">@Model.Localizer["uploadimage"]</label>
                                <input asp-for="Image" style="border-radius: 5px;" type="file" class="form-control"
                                    placeholder="Image" required="">
                            </div>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>

                            <button type="submit">@Model.Localizer["add"]</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- /Admin Section -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
