@page
@model SmartLife.Pages.Partners.IndexModel

@{
    ViewData["Title"] = "Partners";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>Partners</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">Home</a></li>
                <li class="current">Partners</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- partners Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Partners</h2>
        <p>Collaborating for smarter living.</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var partner in Model.Partners)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                        <img src="@partner.Image" class="partner-image" alt="">
                        <div class="portfolio-info">
                            <h4>@partner.Name</h4>
                            <p>@partner.Description</p>
                            <a href="@partner.Image" title="@partner.Name" data-gallery="portfolio-gallery-app"
                                class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                            <a href="@partner.Url" title="More Details" class="details-link"><i
                                    class="bi bi-link-45deg"></i></a>
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <a asp-page="/Partners/Edit" asp-route-id="@partner.Id" class="me-3">Edit</a>
                                <form method="post" action="/Partners/Delete/@partner.Id" style="display: inline;">
                                    <button class="a text-danger" type="submit">Delete</button>
                                </form>
                            }
                        </div>
                    </div><!-- End partner Item -->
                }
            </div><!-- End partners Container -->
        </div>
    </div>
</section>
<!-- End partners Section -->