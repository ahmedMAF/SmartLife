@page
@model SmartLife.Pages.Partners.IndexModel

@{
    ViewData["Title"] = "Partners";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>@Model.Localizer["partners"]</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">@Model.Localizer["partnersHome"]</a></li>
                <li class="current">@Model.Localizer["partners"]</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- partners Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["ourpartners"]</h2>
        <p>@Model.Localizer["ourpartnersp1"]</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var partner in Model.Partners)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                        <img src="@partner.Image" class="partner-image" alt="">
                        <div class="portfolio-info showar">
                            <h4>@if (Model.IsAr) { @partner.NameAr } else { @partner.Name }</h4>
                            @{
                                string desc = Model.IsAr ? partner.DescriptionAr : partner.Description;
                            }
                            @if (desc != null)
                            {
                                <p>
                                    @if (desc.Length <= 60)
                                        @desc
                                    else
                                        @(desc[..50] + "...")
                                </p>
                            }
                            <a href="@partner.Image" title="@if (Model.IsAr) { @partner.DescriptionAr } else { @partner.Description }" data-gallery="portfolio-gallery-app"
                                class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <a asp-page="/Partners/Edit" asp-route-id="@partner.Id" class="me-3">@Model.Localizer["edit"]</a>
                                <form method="post" action="/Partners/Delete/@partner.Id" style="display: inline;" asp-antiforgery="false">
                                    <button class="a text-danger" type="submit">@Model.Localizer["delete"]</button>
                                </form>
                            }
                        </div>
                    </div><!-- End partner Item -->
                }
            </div><!-- End partners Container -->
        </div>
    </div>
</section>
<!-- End partners Section -->