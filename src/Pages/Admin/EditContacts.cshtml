@page
@model SmartLife.Pages.Admin.EditContactsModel

@{
    ViewData["Title"] = "Edit Contacts";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>Dashboard</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">Home</a></li>
                <li class="current">Admin</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Edit Contact</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        @foreach(var contact in Model.Contacts)
        {
            <div class="row justify-content-center mb-5">
                <div class="col-lg-7">
                    <form method="post" class="form" data-aos="fade-up" data-aos-delay="200">
                        <div class="row gy-4">
                            <div>
                                <label class="w-100 mb-2 ps-2 text-start">Contry</label>
                                <input style="border-radius: 5px;" type="text" class="form-control" name="contry"
                                    value="@contact.Country">
                            </div>
                            @foreach(var address in contact.Addresses)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">Address</label>
                                    <input style="border-radius: 5px;" type="text" class="form-control" name="address"
                                        value="@address">
                                </div>
                            }
                            @foreach(var email in contact.Emails)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">Email</label>
                                    <input style="border-radius: 5px;" type="email" class="form-control" name="email"
                                        value="@email">
                                </div>
                            }
                            @foreach(var phone in contact.Phones)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">Phone</label>
                                    <input style="border-radius: 5px;" type="text" class="form-control" name="phone"
                                        value="@phone">
                                </div>
                            }
                            @foreach(var whatsApp in contact.WhatsApps)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">Whatsapp</label>
                                    <input style="border-radius: 5px;" type="text" class="form-control" name="phone"
                                        value="@whatsApp">
                                </div>
                            }
                            <div id="addresses" class="text-start">
                                <span>Add an address</span>
                                <i id="iconAddress" style="color: #7cc576; cursor: pointer; margin-left: 25px;"
                                    class="bi bi-plus-circle fs-5"></i>
                            </div>
                            <div id="emails" class="text-start">
                                <span>Add an email</span>
                                <i id="iconEmail" style="color: #7cc576; cursor: pointer; margin-left: 42px;"
                                    class="bi bi-plus-circle fs-5"></i>
                            </div>
                            <div id="phones" class="text-start">
                                <span>Add an phone</span>
                                <i id="iconPhone" style="color: #7cc576; cursor: pointer; margin-left: 36px;"
                                    class="bi bi-plus-circle fs-5"></i>
                            </div>
                            <div id="whatsup" class="text-start">
                                <span>Add an whatsApp</span>
                                <i id="iconWhasapp" style="color: #7cc576; cursor: pointer;"
                                    class="bi bi-plus-circle fs-5 ms-2"></i>
                            </div>


                            <div class="col-md-12 text-center">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>

                                <button formaction="" type="submit">Save</button>
                                <button formaction="" type="submit" class="btn-danger">Delete</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</section>
<!-- /Admin Section -->

@section Scripts
{
    <script>
        let a = @Model.Contacts;
        let e = 0;
        let p = 0;
        let w = 0;
    </script>
    <script src="~/js/editcontact.js"></script>
}