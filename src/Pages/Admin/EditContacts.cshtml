@page
@model SmartLife.Pages.Admin.EditContactsModel

@{
    ViewData["Title"] = "Edit Contacts";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>Dashboard</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">Home</a></li>
                <li class="current">Admin</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Edit Contact</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        @for(int i = 0; i < Model.Contacts.Count; i++)
        {
            <div class="row justify-content-center mb-5">
                <div class="col-lg-7">
                    <form method="post" class="form" data-aos="fade-up" data-aos-delay="200">
                        <div class="row gy-4">
                            <div>
                                <label class="w-100 mb-2 ps-2 text-start">Country</label>
                                <input asp-for="Contacts[@i].Country" style="border-radius: 5px;" class="form-control"
                                    value="@Model.Contacts[i].Country">
                            </div>
                            @for(int j = 0; j < Model.Contacts[i].Addresses.Count; j++)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">Address</label>
                                    <input asp-for="Contacts[@i].Addresses[@j]" style="border-radius: 5px;" class="form-control"
                                        value="@Model.Contacts[i].Addresses[j]">
                                </div>
                            }
                            @for(int j = 0; j < Model.Contacts[i].Emails.Count; j++)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">Email</label>
                                    <input asp-for="Contacts[@i].Emails[@j]" style="border-radius: 5px;" type="email" class="form-control"
                                        value="@Model.Contacts[i].Emails[j]">
                                </div>
                            }
                            @for(int j = 0; j < Model.Contacts[i].Phones.Count; j++)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">Phone</label>
                                    <input asp-for="Contacts[@i].Phones[@j]" style="border-radius: 5px;" class="form-control"
                                        value="@Model.Contacts[i].Phones[j]">
                                </div>
                            }
                            @for(int j = 0; j < Model.Contacts[i].WhatsApps.Count; j++)
                            {
                                <div>
                                    <label class="w-100 mb-2 ps-2 text-start">WhatsApp</label>
                                    <input asp-for="Contacts[@i].WhatsApps[@j]" style="border-radius: 5px;" class="form-control"
                                        value="@Model.Contacts[i].WhatsApps[j]">
                                </div>
                            }
                            <input type="hidden" id="address-initial-count" value="@Model.Contacts[i].Addresses.Count" />
                            <div id="addresses-@i" class="text-start">
                                <span>Add an address</span>
                                    <i onClick="addAddress(@i)" style="color: #7cc576; cursor: pointer; margin-left: 25px;"
                                    class="bi bi-plus-circle fs-5"></i>
                            </div>
                            <input type="hidden" id="email-initial-count" value="@Model.Contacts[i].Emails.Count" />
                            <div id="emails-@i" class="text-start">
                                <span>Add an email</span>
                                <i onClick="addEmail(@i)" style="color: #7cc576; cursor: pointer; margin-left: 42px;"
                                    class="bi bi-plus-circle fs-5"></i>
                            </div>
                            <input type="hidden" id="phone-initial-count" value="@Model.Contacts[i].Phones.Count" />
                            <div id="phones-@i" class="text-start">
                                <span>Add a phone</span>
                                <i onClick="addPhone(@i)" style="color: #7cc576; cursor: pointer; margin-left: 36px;"
                                    class="bi bi-plus-circle fs-5"></i>
                            </div>
                            <input type="hidden" id="whatsapp-initial-count" value="@Model.Contacts[i].WhatsApps.Count" />
                            <div id="whatsapps-@i" class="text-start">
                                <span>Add a WhatsApp</span>
                                <i onClick="addWhatsApp(@i)" style="color: #7cc576; cursor: pointer;"
                                    class="bi bi-plus-circle fs-5 ms-2"></i>
                            </div>

                            <div class="col-md-12 text-center">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>

                                <button formaction="" type="submit">Save</button>
                                <button formaction="" type="submit" class="btn-danger">Delete</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</section>
<!-- /Admin Section -->

@section Scripts
{
    <script src="~/js/editcontact.js"></script>
}