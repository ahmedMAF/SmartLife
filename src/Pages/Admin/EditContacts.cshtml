@page
@model SmartLife.Pages.Admin.EditContactsModel

@{
    ViewData["Title"] = "Edit Contact";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>Dashboard</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-page="/Index">Home</a></li>
                <li class="current">Admin</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Edit Contact</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">
                        <div>
                            <label class="w-100 mb-2 ps-2 text-start">Please select a country</label>
                            <select style="border-radius: 5px;" class="form-select select" name="country">
                                <option value="" disabled selected>Select a country</option>
                                @foreach (var contact in Model.Contacts)
                                {
                                    <option value="@contact.Country">@contact.Country</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <button type="submit">Edit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- /Admin Section -->
