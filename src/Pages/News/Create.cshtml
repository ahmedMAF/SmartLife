@page
@model SmartLife.Pages.News.CreateModel

@{
    ViewData["Title"] = "Create Post";
}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container">
        <h1>@Model.Localizer["Dashboard"]</h1>
        <nav class="breadcrumbs">
            <ol> <!-- TODO: Fix Admin url -->
                <li><a asp-page="/Index">@Model.Localizer["Dashboardhome"]</a></li>
                <li><a asp-page="/Admin/Index">@Model.Localizer["Dashboardadmin"]</a></li>
                <li class="current">@Model.Localizer["createpost"]</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Admin Section -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["createpost"]</h2>
    </div><!-- End Section Title -->
    <div class="container contact section-title" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200" enctype="multipart/form-data" asp-antiforgery="false">
                    <div class="row gy-4">
                        <div class="col-md-12">
                            <input asp-for="Post.Title" style="border-radius: 5px;" class="form-control"
                                placeholder="Title (English)" required="">
                            <span asp-validation-for="Post.Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <input asp-for="Post.TitleAr" style="border-radius: 5px;" class="form-control"
                                placeholder="Title (Arabic)" required="">
                            <span asp-validation-for="Post.TitleAr" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <textarea asp-for="Post.Content" class="form-control" style="border-radius: 5px;"
                                placeholder="Content (English)" required=""></textarea>
                            <span asp-validation-for="Post.Content" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <textarea asp-for="Post.ContentAr" class="form-control" style="border-radius: 5px;"
                                placeholder="Content (Arabic)" required=""></textarea>
                            <span asp-validation-for="Post.ContentAr" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <div>
                                <label asp-for="Images" class="w-100 mb-2 ps-2 text-start textar">@Model.Localizer["images"]</label>
                                <input asp-for="Images" style="border-radius: 5px;" type="file" multiple class="form-control"
                                    placeholder="Image">
                                <span asp-validation-for="Images" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <button type="submit">@Model.Localizer["create"]</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- /Admin Section -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
