@page
@model IndexModel
@{
    ViewData["Title"] = Model.Localizer["home_title"];
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <div class="swiper init-swiper" style="width: 100%; height: 100%; position: absolute; top: 0; left: 0;">
        <script type="application/json" class="swiper-config">
          {
            "loop": true,
            "speed": 1000,
            "autoplay": {
              "delay": 4000
            },
            "slidesPerView": 1,
            "effect": "fade",
            "fadeEffect": {
              "crossFade": true
            },
            "pagination": {
              "el": ".swiper-pagination",
              "type": "bullets",
              "clickable": true
            }
          }
        </script>

        <div class="swiper-wrapper" style="width: 100%; height: 100%;">
            @foreach (var img in Model.Images)
            {
                <div class="swiper-slide" style="width: 100%; height: 100%;">
                    <img src="@img" alt="Background" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
            }
        </div>
    </div>

    <div class="overlay"
        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1;">
    </div>

    <div class="container text-center">
        <div class="row justify-content-center" data-aos="zoom-out">
            <div class="col-lg-8">
                <img src="~/img/smartLife.png" alt="" class="img-main img-fluid mb-3">
                <h2>@Model.Localizer["home_welcome"]</h2>
                <p>@Model.Localizer["home_intro"]</p>
                <a href="#about" class="btn-get-started">@Model.Localizer["home_start"]</a>
            </div>
        </div>
    </div>

</section><!-- /Hero Section -->

<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["lastnews"]</h2>
        <p>@Model.Localizer["lastnewsp1"]</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
              {
                "loop": true,
                "speed": 600,
                "autoplay": {
                  "delay": 5000
                },
                "slidesPerView": 1,
                "pagination": {
                  "el": ".swiper-pagination",
                  "type": "bullets",
                  "clickable": true
                }
              }
            </script>
            <div class="swiper-wrapper align-items-center">
                @foreach (var post in Model.Posts)
                {
                    <div class="swiper-slide">
                        <div class="col-lg-12" data-aos="zoom-in" data-aos-delay="100">
                            <div class="pricing-item">
                                <h3 class="mb-0">@(Model.IsAr? post.TitleAr: post.Title)</h3>
                                <span>@post.Time</span>
                                <p class="my-3">
                                    @(Model.IsAr? post.ContentAr: post.Content)
                                </p>
                                <div class="text-end">
                                    @foreach (var img in post.Images)
                                    {
                                        <img style="height: 200px;" class="mb-1" src="@img" alt="">
                                    }
                                </div>
                            </div>
                        </div><!-- End post Item -->
                    </div>
                }
            </div>
            <a style="color: white; width: fit-content;" asp-page="/News/Index"
                class="see-more d-block mx-auto">@Model.Localizer["home_see_more"]</a>
        </div>

    </div>

</section><!-- /About Section -->

<!-- partners Section -->
<section id="clients" class="clients section">

    <div class="container">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
            {
              "loop": true,
              "speed": 600,
              "autoplay": {
                "delay": 5000
              },
              "slidesPerView": "auto",
              "pagination": {
                "el": ".swiper-pagination",
                "type": "bullets",
                "clickable": true
              },
              "breakpoints": {
                "320": {
                  "slidesPerView": 2,
                  "spaceBetween": 40
                },
                "480": {
                  "slidesPerView": 3,
                  "spaceBetween": 60
                },
                "640": {
                  "slidesPerView": 4,
                  "spaceBetween": 80
                },
                "992": {
                  "slidesPerView": 4,
                  "spaceBetween": 200
                }
              }
            }
          </script>
            <h2 class="partners mb-5">@Model.Localizer["home_partners"]</h2>
            <div class="swiper-wrapper align-items-center">
                @foreach (var partner in Model.Partners)
                {
                    <div class="swiper-slide"><img src="@partner.Image" class="img-fluid" alt="@partner.Name"></div>
                }
            </div>
            <a asp-page="/Partners/Index" style="color: white; width: fit-content;"
                class="see-more d-block mx-auto">@Model.Localizer["home_see_more"]</a>
        </div>

    </div>

</section><!-- /partners Section -->
