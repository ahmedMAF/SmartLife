<!-- why us -->
<section id="faq" class="faq section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["home_why_us"]</h2>
    </div><!-- End Section Title -->

    @{
        int a = (Model.Questions.Count + 1) / 2;
    }

    <div class="container">
        <div class="row">
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                <div class="faq-container">
                    @for (int i = 0; i < a; i++)
                    {
                        <div class="faq-item">
                            <h3 class="choosear">@(Model.IsAr? Model.Questions[i].NameAr : Model.Questions[i].Name)</h3>
                            <div class="faq-content">
                                <p>@(Model.IsAr? Model.Questions[i].AnswerAr : Model.Questions[i].Answer)</p>
                            </div>
                            <i class="faq-toggle bi bi-chevron-right"></i>
                        </div>
                        <!-- End Faq item-->
                    }
                </div>
            </div><!-- End Faq Column-->

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">

                <div class="faq-container">
                    @for (int i = a; i < Model.Questions.Count; i++)
                    {
                        <div class="faq-item">
                            <h3 class="choosear">@(Model.IsAr? Model.Questions[i].NameAr : Model.Questions[i].Name)</h3>
                            <div class="faq-content">
                                <p>@(Model.IsAr? Model.Questions[i].AnswerAr : Model.Questions[i].Answer)</p>
                            </div>
                            <i class="faq-toggle bi bi-chevron-right"></i>
                        </div>
                        <!-- End Faq item-->
                    }
                </div>

            </div><!-- End Faq Column-->

        </div>

    </div>

</section>
<!-- /why us -->
<!-- Contact Section -->
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["home_contact"]</h2>
        <p>@Model.Localizer["home_contact_desc"]</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        @if (!string.IsNullOrEmpty(Model.Contact.GoogleMap))
        {
            <div class="mb-4" data-aos="fade-up" data-aos-delay="200">
                <iframe style="border:0; width: 100%; height: 270px;" src="@Model.Contact.GoogleMap" frameborder="0"
                    allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <!-- End Google Maps -->
        }
        <div class="row gy-4">

            <div class="col-lg-4">
                @if (Model.Contact.Addresses.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-geo-alt flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_address"]</h3>
                            @foreach (string address in Model.IsAr ? Model.Contact.AddressesAr : Model.Contact.Addresses)
                            {
                                string[] aa = address.Split(':');
                                @if (aa.Length > 1)
                                {
                                    <p><strong>@aa[0]:</strong>@aa[1]</p>
                                }
                                else
                                {
                                    <p>@address</p>
                                }
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }

                @if (Model.Contact.Phones.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-telephone flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_call"]</h3>
                            @foreach (string phone in Model.Contact.Phones)
                            {
                                <p><a class="text-dark" style="font-size: 14px; font-weight: normal;"
                                        href="tel:@phone">@phone</a></p>
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }

                @if (Model.Contact.WhatsApps.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-telephone flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_whatsapp"]</h3>
                            @foreach (string whatsApp in Model.Contact.WhatsApps)
                            {
                                <p><a class="text-dark" style="font-size: 14px; font-weight: normal;"
                                        href="https://wa.me/@whatsApp">@whatsApp</a></p>
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }

                @if (Model.Contact.Emails.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="500">
                        <i class="bi bi-envelope flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_email"]</h3>
                            @foreach (string email in Model.Contact.Emails)
                            {
                                <p><a class="text-dark" style="font-size: 14px; font-weight: normal;" href="mailto:@email">@email</a></p>
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }
            </div>

            <div class="col-lg-8">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200" asp-antiforgery="false">
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <input type="text" name="name" class="form-control"
                                placeholder="@Model.Localizer["home_contact_form_name"]" required="">
                        </div>

                        <div class="col-md-6 ">
                            <input type="text" class="form-control" name="phone"
                                placeholder="@Model.Localizer["home_contact_form_phone"]" required="">
                        </div>

                        <div class="col-md-12">
                            <input type="email" class="form-control" name="email"
                                placeholder="@Model.Localizer["home_contact_form_email"]" required="">
                        </div>

                        <div class="col-md-12">
                            <textarea class="form-control" name="message" rows="6"
                                placeholder="@Model.Localizer["home_contact_form_message"]" required=""></textarea>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">@Model.Localizer["home_contact_form_loading"]</div>
                            <div class="error-message"></div>
                            <div class="sent-message">@Model.Localizer["home_contact_form_sent"]</div>

                            @if (TempData["SuccessMessage"] != null && TempData["SuccessMessage"].ToString() != "")
                            {
                                <div class="alert alert-success">@TempData["ErrorMessage"].ToString()</div>
                            }

                            @if (TempData["ErrorMessage"] != null && TempData["ErrorMessage"].ToString() != "")
                            {
                                <div class="alert alert-danger">@TempData["ErrorMessage"].ToString()</div>
                            }

                            <recaptcha />

                            <button type="submit">@Model.Localizer["home_contact_form_send"]</button>
                        </div>
                    </div>
                </form>
            </div><!-- End Contact Form -->
        </div>
    </div>
</section><!-- /Contact Section -->
