@page
@model IndexModel
@{
    ViewData["Title"] = Model.Localizer["home_title"];
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">
    <div class="container text-center">
        <div class="row justify-content-center" data-aos="zoom-out">
            <div class="col-lg-8">
                <img style="height: 80px;" src="~/img/smartLife.png" alt="" class="img-fluid mb-3">
                <h2>@Model.Localizer["home_welcome"]</h2>
                <p>@Model.Localizer["home_intro"]</p>
                <a href="#about" class="btn-get-started">@Model.Localizer["home_start"]</a>
            </div>
        </div>
    </div>

</section><!-- /Hero Section -->
<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["home_about_title"]</h2>
        <p>@Model.Localizer["home_about"]</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            <div class="col-lg-5 text-center">
                <img style="height: 350px; text-align: center; border-radius: 10px;" src="~/img/about2.jpg"
                    class="img-fluid" alt="">
            </div>
            <div class="col-lg-7 content">
                <h3>@Model.Localizer["home_vision_title"]</h3>
                <p class="fst-italic">
                   @Model.Localizer["home_vision"]
                </p>
                <p>
                    @Model.Localizer["home_aim"]
                </p>
                <a asp-page="/About/Index" style="color: white; width: fit-content;" class="see-more d-block mt-5">@Model.Localizer["home_see_more"]</a>
            </div>
        </div>
    </div>
</section><!-- /About Section -->
<!-- partners Section -->
<section id="clients" class="clients section">

    <div class="container">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": {
                      "slidesPerView": 2,
                      "spaceBetween": 40
                    },
                    "480": {
                      "slidesPerView": 3,
                      "spaceBetween": 60
                    },
                    "640": {
                      "slidesPerView": 4,
                      "spaceBetween": 80
                    },
                    "992": {
                      "slidesPerView": 6,
                      "spaceBetween": 120
                    }
                  }
                }
            </script>
            <h2 class="partners mb-5">@Model.Localizer["home_partners"]</h2>
            <div class="swiper-wrapper align-items-center">
                @foreach (var partner in Model.Partners)
                {
                    <div class="swiper-slide"><img src="@partner.Image" class="img-fluid" alt="@partner.Name"></div>
                }
            </div>
            <a asp-page="/Partners/Index" style="color: white; width: fit-content;" class="see-more d-block mx-auto">@Model.Localizer["home_see_more"]</a>
        </div>

    </div>

</section><!-- /partners Section -->
<!-- products Section -->
<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["home_products"]</h2>
        <p>@Model.Localizer["home_products_desc"]</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                        <a asp-page="/Products/Details" asp-route-id="@product.Id">
                            <img src="@product.Image" class="product-image" alt="@product.Name">
                            <div class="portfolio-info">
                                <h4>@if (Model.IsAr) { @product.NameAr } else { @product.Name }</h4>
                                <p>
                                    @if (Model.IsAr)
                                    {
                                        @if (product.DescriptionAr.Length < 50)
                                            @product.DescriptionAr
                                        else 
                                            @(product.DescriptionAr[..50] + "...")
                                    }
                                    else
                                    {
                                        @if (product.Description.Length < 50)
                                            @product.Description
                                        else
                                            @(product.Description[..50] + "...")
                                    }
                                </p>
                                <a href="@product.Image" title="@if (Model.IsAr) { @product.NameAr } else { @product.Name }" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                <a asp-page="/Products/Details" asp-route-id="@product.Id" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                            </div>
                        </a>
                    </div><!-- End Portfolio Item -->
                }
            </div><!-- End Portfolio Container -->
            <a asp-page="/Products/Index" style="color: white; width: fit-content;" class="see-more d-block mx-auto">@Model.Localizer["home_see_more"]</a>
        </div>

    </div>

</section><!-- /products Section -->
<!-- clinets Section -->
<section id="testimonials" class="testimonials section dark-background">
    <img src="~/img/testimonials-bg.jpg" class="testimonials-bg" alt="">

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <h2 class="text-center mb-5">@Model.Localizer["home_clients"]</h2>
        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  }
                }
            </script>
            <div class="swiper-wrapper">
                @foreach (var client in Model.Clients)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <img src="@client.Image" class="testimonial-img" alt="@client.Name">
                            <h3>@if (Model.IsAr) { @client.NameAr } else { @client.Name }</h3>
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                <span>
                                    @if (Model.IsAr)
                                    {
                                        @if (client.Description.Length < 50)
                                            @client.DescriptionAr
                                        else 
                                            @(client.DescriptionAr[..50] + "...")
                                    }
                                    else
                                    {
                                        @if (client.DescriptionAr.Length < 50)
                                            @client.Description
                                        else
                                            @(client.Description[..50] + "...")
                                    }
                                </span>
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                        </div>
                    </div><!-- End testimonial item -->
                }
            </div>
            <div class="swiper-pagination"></div>
            <a asp-page="/Clients/Index" style="color: white; width: fit-content;" class="see-more d-block mx-auto">@Model.Localizer["home_see_more"]</a>
        </div>

    </div>

</section>
<!-- /clinets Section -->
