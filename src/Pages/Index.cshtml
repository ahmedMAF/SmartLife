@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <div class="container text-center">
        <div class="row justify-content-center" data-aos="zoom-out">
            <div class="col-lg-8">
                <img style="height: 80px;" src="~/img/smartLife.png" alt="" class="img-fluid mb-3">
                <h2>Welcome To Smart Life</h2>
                <p>We are a team providing luxurious home and business automation solutions to make your life easier
                    anytime, anywhere.</p>
                <a href="#about" class="btn-get-started">Get Started</a>
            </div>
        </div>
    </div>

</section><!-- /Hero Section -->
<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>About</h2>
        <p>We create smart solutions that make your life easier and more luxurious</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            <div class="col-lg-5 text-center">
                <img style="height: 350px; text-align: center; border-radius: 10px;" src="assets/img/about2.jpg"
                    class="img-fluid" alt="">
            </div>
            <div class="col-lg-7 content">
                <h3>Vision</h3>
                <p class="fst-italic">
                    To be the market leader in smart automation systems, delivering innovative solutions that redefine
                    comfort, efficiency, and security.
                </p>
                <p>
                    To be one of Middle East market leaders in the field of automation system solutions and to pursue
                    maximum customer satisfaction by providing reliable, sustainable products & efficient, high-quality
                    services.
                </p>
                <a style="color: white; width: fit-content;" href="#about" class="see-more d-block mt-5">See More</a>
            </div>
        </div>

    </div>

</section><!-- /About Section -->
<!-- partners Section -->
<section id="clients" class="clients section">

    <div class="container">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": {
                      "slidesPerView": 2,
                      "spaceBetween": 40
                    },
                    "480": {
                      "slidesPerView": 3,
                      "spaceBetween": 60
                    },
                    "640": {
                      "slidesPerView": 4,
                      "spaceBetween": 80
                    },
                    "992": {
                      "slidesPerView": 6,
                      "spaceBetween": 120
                    }
                  }
                }
            </script>
            <h2 class="partners mb-5">Our partners</h2>
            <div class="swiper-wrapper align-items-center">
                @foreach (var partner in Model.Partners)
                {
                    <div class="swiper-slide"><img src="@partner.Image" class="img-fluid" alt="@partner.Name"></div>
                }
            </div>
            <a style="color: white; width: fit-content;" href="Partners/Index" class="see-more d-block mx-auto">See
                More</a>
        </div>

    </div>

</section><!-- /partners Section -->
<!-- products Section -->
<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Products</h2>
        <p>All-In-One Smart Automation for homes, industries and commerce</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">All</li>
                @foreach (var category in Model.Categories)
                {
                    <li data-filter="@category.Filter">@category.Name</li>
                }
            </ul><!-- End Portfolio Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                        <img src="@product.Image" class="img-fluid" alt="@product.Name">
                        <div class="portfolio-info">
                            <h4>@product.Name</h4>
                            <p>@product.Description</p>
                            <a href=@product.Image" title="@product.Name" data-gallery="portfolio-gallery-app"
                                class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                            <a asp-page="Details" asp-route-id="@product.Id" title="More Details" class="details-link"><i
                                    class="bi bi-link-45deg"></i></a>
                        </div>
                    </div>

                    <!-- End Portfolio Item -->
                }
            </div><!-- End Portfolio Container -->
            <a style="color: white; width: fit-content;" href="#about" class="see-more d-block mx-auto">See More</a>
        </div>

    </div>

</section><!-- /products Section -->
<!-- clinets Section -->
<section id="testimonials" class="testimonials section dark-background">
    <img src="assets/img/testimonials-bg.jpg" class="testimonials-bg" alt="">

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <h2 class="text-center mb-5">Our Clinets</h2>
        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  }
                }
            </script>
            <div class="swiper-wrapper">
                @foreach (var client in Model.Clients)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <img src="@client.Image" class="testimonial-img" alt="@client.Name">
                            <h3>@client.Name</h3>
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                <span>@client.Description</span>
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                        </div>
                    </div><!-- End testimonial item -->
                }
            </div>
            <div class="swiper-pagination"></div>
            <a style="color: white; width: fit-content;" asp-page="Clients/Index" class="see-more d-block mx-auto">See More</a>
        </div>

    </div>

</section>
<!-- /clinets Section -->
