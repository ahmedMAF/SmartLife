<!-- Contact Section -->
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Localizer["home_contact"]</h2>
        <p>@Model.Localizer["home_contact_desc"]</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="mb-4" data-aos="fade-up" data-aos-delay="200">
            <iframe style="border:0; width: 100%; height: 270px;"
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d48389.78314118045!2d-74.006138!3d40.710059!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a22a3bda30d%3A0xb89d1fe6bc499443!2sDowntown%20Conference%20Center!5e0!3m2!1sen!2sus!4v1676961268712!5m2!1sen!2sus"
                frameborder="0" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div><!-- End Google Maps -->

        <div class="row gy-4">

            <div class="col-lg-4">
                @if (Model.Contact.Addresses.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-geo-alt flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_address"]</h3>
                            @foreach (string address in Model.IsAr ? Model.Contact.AddressesAr : Model.Contact.Addresses)
                            {
                                <p>@address</p>
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }

                @if (Model.Contact.Phones.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-telephone flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_call"]</h3>
                            @foreach (string phone in Model.Contact.Phones)
                            {
                                <p>@phone</p>
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }

                @if (Model.Contact.WhatsApps.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-telephone flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_whatsapp"]</h3>
                            @foreach (string whatsApp in Model.Contact.WhatsApps)
                            {
                                <p>@whatsApp</p>
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }

                @if (Model.Contact.Emails.Count != 0)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="500">
                        <i class="bi bi-envelope flex-shrink-0 contactar"></i>
                        <div>
                            <h3>@Model.Localizer["home_contact_email"]</h3>
                            @foreach (string email in Model.Contact.Emails)
                            {
                                <p>@email</p>
                            }
                        </div>
                    </div>
                    <!-- End Info Item -->
                }
            </div>

            <div class="col-lg-8">
                <form method="post" class="form" data-aos="fade-up" data-aos-delay="200" asp-antiforgery="false">
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <input type="text" name="name" class="form-control" placeholder="@Model.Localizer["home_contact_form_name"]" required="">
                        </div>

                        <div class="col-md-6 ">
                            <input type="text" class="form-control" name="phone" placeholder="@Model.Localizer["home_contact_form_phone"]" required="">
                        </div>

                        <div class="col-md-12">
                            <input type="email" class="form-control" name="email" placeholder="@Model.Localizer["home_contact_form_email"]" required="">
                        </div>

                        <div class="col-md-12">
                            <textarea class="form-control" name="message" rows="6" placeholder="@Model.Localizer["home_contact_form_message"]" required=""></textarea>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">@Model.Localizer["home_contact_form_loading"]</div>
                            <div class="error-message"></div>
                            <div class="sent-message">@Model.Localizer["home_contact_form_sent"]</div>

                            <button type="submit">@Model.Localizer["home_contact_form_send"]</button>
                        </div>
                    </div>
                </form>
            </div><!-- End Contact Form -->
        </div>
    </div>
</section><!-- /Contact Section -->
